    <ImageView
        android:id="@+id/disc_userImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/avatar_background"
        android:backgroundTint="#A5D6A7"
        android:elevation="5dp"
        android:padding="10dp"
        android:src="@drawable/av_07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/disc_welcomeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="16dp"
        android:text="Welcome, User!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/disc_userImage"
        app:layout_constraintTop_toTopOf="@+id/disc_userImage"
        app:layout_constraintBottom_toBottomOf="@+id/disc_userImage"/>

    <SearchView
        android:id="@+id/search_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/searchview_background"
        android:fontFamily="@font/hind_regular"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Enter Quiz Title..."
        app:layout_constraintEnd_toEndOf="@+id/disc_welcomeTextView"
        app:layout_constraintStart_toStartOf="@+id/disc_userImage"
        app:layout_constraintTop_toBottomOf="@+id/disc_userImage" />


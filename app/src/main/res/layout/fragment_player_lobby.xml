<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.host.HostLobbyFragment">

    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#2196F3"
        android:text="GAME PIN"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="36dp"
        app:layout_constraintBottom_toTopOf="@id/playerLobbyGamePin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/playerLobbyGamePin"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#2196F3"
        android:text="GAME PIN"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="36dp"
        app:layout_constraintBottom_toTopOf="@id/playerLobbyGamePin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerLobbyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerLobbyGamePin"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="1"
        tools:listitem="@layout/player_cards" />

</androidx.constraintlayout.widget.ConstraintLayout>
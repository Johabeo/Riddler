<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C00D4"
    tools:context=".ui.view.player.PlayerFinalLeaderboardFragment">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Standings"
        android:textColor="@color/white"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/first_place"/>

    <TextView
        android:id="@+id/first_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="1st Place"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:elevation="17dp"
        app:layout_constraintEnd_toEndOf="@+id/column1"
        app:layout_constraintStart_toStartOf="@+id/column1"
        app:layout_constraintBottom_toTopOf="@+id/column1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="56sp"
        android:elevation="17dp"
        app:layout_constraintEnd_toEndOf="@+id/column1"
        app:layout_constraintStart_toStartOf="@+id/column1"
        app:layout_constraintTop_toTopOf="@+id/column1" />

    <TextView
        android:id="@+id/second_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginEnd="16dp"
        android:text="2nd Place"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:elevation="9dp"
        app:layout_constraintEnd_toEndOf="@+id/column2"
        app:layout_constraintStart_toStartOf="@+id/column2"
        app:layout_constraintBottom_toTopOf="@+id/column2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="2"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textSize="56sp"
        android:elevation="9dp"
        app:layout_constraintEnd_toEndOf="@+id/column2"
        app:layout_constraintStart_toStartOf="@+id/column2"
        app:layout_constraintTop_toTopOf="@+id/column2" />

    <TextView
        android:id="@+id/third_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:elevation="9dp"
        android:text="3rd Place"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/column3"
        app:layout_constraintStart_toStartOf="@+id/column3"
        app:layout_constraintBottom_toTopOf="@+id/column3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="24dp"
        android:elevation="9dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="@+id/column3"
        app:layout_constraintStart_toStartOf="@+id/column3"
        app:layout_constraintTop_toTopOf="@+id/column3" />

    <ImageView
        android:id="@+id/column1"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:elevation="16dp"
        android:src="@drawable/column_shape"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/column2"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:elevation="8dp"
        android:background="@color/white"
        android:src="@drawable/column_shape"
        app:layout_constraintBottom_toBottomOf="@+id/column1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/column1" />

    <ImageView
        android:id="@+id/column3"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:adjustViewBounds="true"
        android:strokeColor="@color/black"
        android:elevation="8dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/column_shape"
        app:layout_constraintBottom_toBottomOf="@+id/column2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/column2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>